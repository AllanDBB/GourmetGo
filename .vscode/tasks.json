{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Instalar App",
            "type": "shell",
            "command": "./gradlew",
            "args": ["installDebug"],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new",
                "showReuseMessage": false
            },
            "problemMatcher": []
        },
        {
            "label": "Ejecutar App",
            "type": "shell",
            "command": "adb",
            "args": ["shell", "am", "start", "-n", "gourmetgo.client/.AppMain"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": false
            }
        },
        {
            "label": "ðŸ”„ Compilar + Instalar + Ejecutar",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Compilar e Instalar App",
                "Ejecutar App"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Limpiar Proyecto",
            "type": "shell",
            "command": "./gradlew",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}/client"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
